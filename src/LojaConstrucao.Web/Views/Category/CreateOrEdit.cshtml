@model LojaConstrucao.Web.ViewModels.CategoryViewModel
<div class="row header">
    <div class="col md-12">
        <h3>Categories</h3>
        <a href="/Category" class="btn btn-primary">New</a>
    </div>
</div>

<div class="row form-wrapper">
    <div class="col md-12">
        <form id="form" class="form-horizontal" asp-action="CreateOrEdit" asp-controller="Category"
        data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Category'" asp-anti-forgery>
            <div class="form-group">
                <label class="col-md-2 control-label">Name</label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Name"/><!--  -->
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-offset-2 col-md-8">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="col-md-8">
                    <button class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
